<h3>Kommentek hozzáadása</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
        <%= f.label :Felhasználónév %><br>
        <%= f.text_field(:username, {:class => 'form-control'}) %>
    </p>
    <p>
        <%= f.label :Szöveg %><br>
        <%= f.text_area(:body, {:class => 'form-control'}) %>
    </p>
    <p>
        <%= f.submit(:Kommentezés, {:class => 'btn btn-primary'}) %>
    </p>
<% end %>